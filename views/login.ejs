<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')  %> 
        <!-- MAIN -->
        <main class="login__main">
            <section class="login__main__section">
              <div class="login__main__section__titular">
                <h2>Inicio de Sesión</h2>
                <h4>Inicia sesión con tu correo electrónico</h4>
              </div>
              <form action="" class="login__main__section__form">
                <div class="form__box__login">
                  <label for="">Email</label>
                  <input type="email" placeholder="Ingresa tu email" />
                </div>
                <div class="form__box__login">
                  <label for="">Contraseña</label>
                  <input type="password" placeholder="Ingresa tu contraseña" />
                  <button type="button">
                    <i class="fa-solid fa-eye"></i>
                  </button>
                </div>
                <div class="button__login">
                  <button type="submit" class="boton__general">
                      Inicia sesión
                  </button>
                </div>
                <div class="login__socialmedia">
                  <h4>Iniciar sesion con:</h4>
                  <button href=""><i class="fa-brands fa-google"></i>Google</button>
                  <button href=""><i class="fa-brands fa-facebook"></i>Facebook</button>
                </div>
                <div class="login__forget-account">
                  <h4>¿No tienes cuenta?</h4>
                  <a href="/user/register">Registrate</a>
                </div>
              </form>
            </section>
          </main>
          <%- include('./partials/footer')  %> 
    </body>
</html>