<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header') %>
      <!-- MAIN -->
      <main class="main__user">
        <section class="main__section__user">
          <article class="main__article__user__menu">
            <p>
              <%= name %>
            </p>
            <a href="#" class="relative block">
              <img alt="profil" src="/images/user.png" class="mx-auto object-cover rounded-full h-20 w-20 " />
            </a>
            <p>
              <%= email %>
            </p>
            <hr>
            <button class="boton__general">Mis Compras</button>
            <button class="boton__general">Salir</button>
          </article>
          <article class="main__article__user__datos">
            <h2>Mis Datos</h2>
            <form action="/user/edit/<%= userLogin.id %>?_method=PUT" method="post">
              <div class="input__group__general">
                <input id="name" name="name" class="input__general" type="text" />
                <label for="name" class="label__general">
                  <%= name ? name : 'Ingrese su nombre' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="surname" name="surname" class="input__general" type="text" />
                <label for="surname" class="label__general">
                  <%= surname ? surname : 'Ingrese su apellido' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="phone" name="phone" class="input__general" type="number" />
                <label for="phone" class="label__general">
                  <%= phone ? phone : 'Ingrese su numero de telefono' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="dni" name="dni" class="input__general" type="number" />
                <label for="dni" class="label__general">
                  <%= dni ? dni : 'Ingrese su DNI' %>
                </label>
              </div>
              <h2>Mis Direcciones</h2>
              <div class="input__group__general">
                <input id="street" name="street" class="input__general" type="text" />
                <label for="street" class="label__general">
                  <%= street ? street : 'Ingrese su direccion' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="streetNumber" name="streetNumber" class="input__general" type="number" />
                <label for="streetNumber" class="label__general">
                  <%= streetNumber ? streetNumber : 'Ingrese su altura' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="floor" name="floor" class="input__general" type="number" />
                <label for="floor" class="label__general">
                  <%= floor ? floor : 'Ingrese su piso' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="dept" name="dept" class="input__general" type="number" />
                <label for="dept" class="label__general">
                  <%= dept ? dept : 'Ingrese su departamento' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="ref" name="ref" class="input__general" type="text" />
                <label for="ref" class="label__general">
                  <%= ref ? ref : 'Ingrese alguna referencia' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="postcode" name="postcode" class="input__general" type="number" />
                <label for="postcode" class="label__general">
                  <%= postcode ? postcode : 'Coloque su codigo postal' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="province" name="province" class="input__general" type="text" />
                <label for="province" class="label__general">
                  <%= province ? province : 'Coloque su provincia' %>
                </label>
              </div>
              <div class="input__group__general">
                <input id="location" name="location" class="input__general" type="text" />
                <label for="location" class="label__general">
                  <%= location ? province : 'Coloque su localidad' %>
                </label>
              </div>
              <button class="boton__general">Guardar</button>
            </form>
          </article>
        </section>
      </main>
      <!-- Footer -->
      <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>
        <script src="/javascripts/user.js" type="text/javascript"></script>
        <!-- TAILWIND -->
        <script src="https://cdn.tailwindcss.com"></script>
  </body>

</html>